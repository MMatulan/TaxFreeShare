@page "/dashboardKjøper"
@inject NavigationManager Navigation

<h3 class="mb-4">Velkommen, kjøper!</h3>

<div class="row g-4">

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-box-seam fs-1 text-primary"></i>
                <h5 class="card-title mt-2">Mine bestillinger</h5>
                <p class="card-text">Se og administrer dine nåværende og tidligere bestillinger.</p>
                <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo("/minebestillinger-Kjøper"))">
                    Gå til bestillinger
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-chat-dots fs-1 text-success"></i>
                <h5 class="card-title mt-2">Chat</h5>
                <p class="card-text">Kommuniser med selgere du har sendt bestilling til.</p>
                <button class="btn btn-outline-success" @onclick="@(() => Navigation.NavigateTo("/chat"))">
                    Åpne chat
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-person-circle fs-1 text-secondary"></i>
                <h5 class="card-title mt-2">Rediger profil</h5>
                <p class="card-text">Oppdater dine personlige opplysninger og kontoinnstillinger.</p>
                <button class="btn btn-outline-secondary" @onclick="@(() => Navigation.NavigateTo("/redigerProfil"))">
                    Rediger profil
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-plus-circle fs-1 text-info"></i>
                <h5 class="card-title mt-2">Ny bestilling</h5>
                <p class="card-text">Legg til en ny bestilling fra taxfree-produktene du ønsker.</p>
                <button class="btn btn-outline-info" @onclick="@(() => Navigation.NavigateTo("/ny-bestilling"))">
                    Ny bestilling
                </button>
            </div>
        </div>
    </div>

</div>
